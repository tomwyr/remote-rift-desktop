{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "remote-rift-desktop",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart",
    },
    {
      "name": "remote-rift-desktop:custom-address",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "toolArgs": [
        "--dart-define",
        "API_HOST=${input:host}",
        "--dart-define",
        "API_PORT=${input:port}"
      ],
    },
  ],
  "inputs": [
    {
      "id": "host",
      "type": "promptString",
      "description": "Connector API host address",
    },
    {
      "id": "port",
      "type": "promptString",
      "description": "Connector API port number",
      "default": "8080",
    }
  ]
}